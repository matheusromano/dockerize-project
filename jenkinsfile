pipeline {
    agent any
    
    tools {
        go 'go1.18.1'
    }

    stages {
        stage("test") {
            steps {
                sh 'go test'
            }
        }
        stage("build") {
            steps {
                sh 'go version'
                sh 'go get ./...'
                sh 'docker build . -t mrbraga/my-server'
            }   
        }
        stage('deliver') {
            agent any
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'Mathbzica93', usernameVariable: 'mrbraga')] {
                sh "docker login -u mrbraga -p Mathbzica93"
                sh 'docker push mrbraga/my-server'
                }
            }
        }
    }
}